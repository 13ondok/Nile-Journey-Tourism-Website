
@{
    ViewData["Title"] = "Index";
}


<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/all.min.css">
    <link rel="stylesheet" href="css/home.css">
    <link rel="stylesheet" href="css/profile.css">
    <title>Nile Journey</title>
</head>

<body>

    <div class="nav_container">
        <nav>
            <div class="logo">
                <i class="fa-regular fa-compass" style="color: #ffffff;"></i>
                <a class="logo_up" href="#">Nile Journey</a>
                <ul class="navigation">
                    <li><a asp-controller="home_sucsses" asp-action="Index">Home</a></li>
                    <li><a asp-controller="reviews" asp-action="Index">Review</a></li>
                    <li><a asp-controller="favorites" asp-action="Index">Favorite</a></li>
                    <li><a asp-controller="about" asp-action="Index">About Egypt</a></li>
                </ul>
            </div>
        </nav>
    </div>

    <div class="profile">
        <div class="content">
            <div class="containing">
                <h1 class="greeting">Hello Menna</h1>
                <div class="container">
                    <div class="info_card">
                        <div class="heading">
                            <h2>My Account</h2>
                        </div>
                        <form>
                            <div class="user_info">
                                <h3>User Information</h3>
                                <div class="content">
                                    <div class="username">
                                        <label for="username">Username</label>
                                        <input type="text" name="username" id="username">
                                    </div>
                                    <div class="email">
                                        <label for="email">Email Address</label>
                                        <input type="email" name="email" id="email">
                                    </div>
                                    <div class="f_name">
                                        <label for="fName">First Name</label>
                                        <input type="text" name="fName" id="fName">
                                    </div>
                                    <div class="l_name">
                                        <label for="lName">Last Name</label>
                                        <input type="text" name="lName" id="lName">
                                    </div>
                                </div>
                            </div>
                            <div class="contact_info">
                                <h3>Contact Information</h3>
                                <div class="content">
                                    <div class="country">
                                        <label for="country">Country</label>
                                        <input type="text" name="country" id="country">
                                    </div>
                                    <div class="phone">
                                        <label for="phone">Phone Number</label>
                                        <input type="text" name="phone" id="phone" value="+02">
                                    </div>
                                </div>
                            </div>
                            <div class="personal_info">
                                <div class="gender">
                                    <h3>Gender</h3>
                                    <div class="genders">
                                        <div class="male">
                                            <input type="radio" name="gender" id="male">
                                            <label for="male">Male</label>
                                        </div>
                                        <div class="female">
                                            <input type="radio" name="gender" id="female">
                                            <label for="female">Female</label>
                                        </div>
                                        <div class="birth">
                                            <label for="birth">Birth Date</label>
                                            <input type="date" name="birth" id="birth">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="submit">
                                <input type="submit" value="Save Changes">
                            </div>
                        </form>
                    </div>
                    <div class="profile_card">
                        <div class="header">
                            <i class="fa-solid fa-user" style="color: #ffffff;"></i>
                            <h2>Menna Ali</h2>
                        </div>
                        <div class="content">
                            <ul>
                                <li>
                                    <i class="fa-regular fa-pen-to-square" style="color: #ffffff;"></i><a href="#">
                                        My
                                        Account
                                    </a>
                                </li>
                                <li>
                                    <i class="fa-regular fa-map" style="color: #ffffff;"></i><a href="visits.html">
                                        Your
                                        Visits
                                    </a>
                                </li>
                                <li>
                                    <i class="fa-solid fa-lock" style="color: #ffffff;"></i><a href="privacy.html">Privacy</a>
                                </li>
                            </ul>
                        </div>
                        <button class="log_out">Log Out</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="js/profile.js"></script>
</body>

